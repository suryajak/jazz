{
  "template": "applicationlogs",
  "settings": {
    "index.refresh_interval": "10s"
  },
  "mappings": {
    "applicationlogs": {
      "properties": {
        "timestamp": {
          "type": "date",
          "format": "dateOptionalTime"
        },
        "request_id": {
          "type": "keyword",
          "index": true
        },
        "platform_log_group": {
          "type": "keyword",
          "index": true
        },
        "platform_log_stream": {
          "type": "keyword",
          "index": true
        },
        "servicename": {
          "type": "keyword",
          "index": true
        },
        "asset_identifier": {
          "type": "keyword",
          "index": true
        },
        "domain": {
          "type": "keyword",
          "index": true
        },
        "environment": {
          "type": "keyword",
          "index": true
        },
        "log_level": {
          "type": "keyword",
          "index": true
        },
        "message": {
          "type": "keyword",
          "index": true
        }
      }
    }
  }
}